{
    "manifest_version": 2,
    "author": "drag13",
    "name": "HabroSanitizer",
    "description": "This extension removes posts from chosen authors on the Habr.com. Completely free, no ads, no telemetry",
    "version": "2.2.0",
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "./asset/i16.png",
        "48": "./asset/i48.png",
        "128": "./asset/i128.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "content_scripts": [
        {
            "matches": [
                "https://habr.com/*"
            ],
            "js": [
                "sanitizer.js"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "{99a19d47-bbc0-4451-a0cc-51d182095ccd}"
        }
    }
}